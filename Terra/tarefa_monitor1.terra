#include "/home/terra/TerraNet_v0.1/terra/TerraNet.defs"

var ushort nodeId = getNodeId();

pktype usrMsg from radioMsg with
	var ubyte[4] d8;
	var ushort[4] d16;
	var ulong[2] d32;
end

var usrMsg msgRadio;
msgRadio.d16[0] = 0;

if nodeId == 11 then
	msgRadio.source = nodeId;
	msgRadio.target = BROADCAST; // ou msgRadio.target = 1;
	loop do
		await 5s;
		emit REQ_TEMP();
		msgRadio.d16[0] = await TEMP;
		emit SEND(msgRadio);
		await SEND_DONE;
	end
end
